
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Quota</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.name %></td>
        <td><%= domain.quota %></td>
        <td><%= link_to 'Edit', edit_domain_path(domain), class: 'btn btn-default' %></td>
        <td><%= link_to 'Delete', domain, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <td><%= link_to 'Emails', emails_path, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
